extends layout.pug

block content
    h1 Books
    div.newBookButton
      p
        a.button(href='/') Home
      p  
        a.button(href='/books/new') Create New Book
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each entry in book
            tr
                td                    
                    a(href='/books/'+ entry.id) #{entry.title}
                td #{entry.author}
                td #{entry.genre}
                td #{entry.year}
       
        